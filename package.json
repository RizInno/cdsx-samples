{
	"name": "cdsx-samples",
	"version": "1.0.0",
	"description": "A simple CAP project.",
	"repository": "<Add your repository here>",
	"license": "UNLICENSED",
	"private": true,
	"dependencies": {
		"@rizing/cds-extension": "^0.6.2",
		"@sap-cloud-sdk/http-client": "^2.11.0",
		"@sap/cds": "^6",
		"express": "^4"
	},
	"devDependencies": {
		"@sap/ux-specification": "^1.102.12",
		"dotenv": "^16.0.3",
		"sqlite3": "^5.0.4"
	},
	"scripts": {
		"start": "cds run",
		"watch-notification": "cds watch --open notification/webapp/index.html?sap-ui-xx-viewCache=false"
	},
	"engines": {
		"node": "^16.15"
	},
	"eslintConfig": {
		"extends": "eslint:recommended",
		"env": {
			"es2020": true,
			"node": true,
			"jest": true,
			"mocha": true
		},
		"globals": {
			"SELECT": true,
			"INSERT": true,
			"UPDATE": true,
			"DELETE": true,
			"CREATE": true,
			"DROP": true,
			"CDL": true,
			"CQL": true,
			"CXL": true,
			"cds": true
		},
		"rules": {
			"no-console": "off",
			"require-atomic-updates": "off"
		}
	},
	"cds": {
		"requires": {
			"API_EQUIPMENT": {
				"kind": "odata-v2",
				"model": "srv/external/API_EQUIPMENT",
				"[backend]": {
					"credentials": {
						"url": "{{s4h_hostname}}/sap/opu/odata/sap/API_EQUIPMENT",
						"username": "{{s4h_username}}",
						"password": "{{s4h_password}}"
					}
				}
			},
			"API_MAINTNOTIFICATION": {
				"kind": "odata-v2",
				"model": "srv/external/API_MAINTNOTIFICATION",
				"[backend]": {
					"credentials": {
						"url": "{{s4h_hostname}}/sap/opu/odata/sap/API_MAINTNOTIFICATION",
						"username": "{{s4h_username}}",
						"password": "{{s4h_password}}"
					}
				}
			},
			"API_FUNCTIONALLOCATION": {
				"kind": "odata-v2",
				"model": "srv/external/API_FUNCTIONALLOCATION",
				"[backend]": {
					"credentials": {
						"url": "{{s4h_hostname}}/sap/opu/odata/sap/API_FUNCTIONALLOCATION",
						"username": "{{s4h_username}}",
						"password": "{{s4h_password}}"
					}
				}
			},
			"API_COMPANYCODE_SRV": {
				"kind": "odata-v2",
				"model": "srv/external/API_COMPANYCODE_SRV",
				"[backend]": {
					"credentials": {
						"url": "{{s4h_hostname}}/sap/opu/odata/sap/API_COMPANYCODE_SRV",
						"username": "{{s4h_username}}",
						"password": "{{s4h_password}}"
					}
				}
			}
		}
	},
	"sapux": [
		"app/notification"
	]
}